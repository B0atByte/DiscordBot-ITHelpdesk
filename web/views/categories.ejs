<%- include('header') %>

<h3 class="mb-4"><i class="bi bi-tags"></i> Categories & Keywords</h3>

<% if (saved) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  บันทึกสำเร็จ!
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>
<% if (deleted) { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  ลบสำเร็จ!
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<!-- Add Category -->
<div class="card stat-card p-4 mb-4">
  <h5 class="mb-3">เพิ่มประเภทใหม่</h5>
  <form method="POST" action="/categories/add">
    <div class="row g-2 mb-2">
      <div class="col-md-4">
        <input type="text" name="name" class="form-control" placeholder="ชื่อประเภท" required>
      </div>
      <div class="col-md-6">
        <input type="text" name="keywords" class="form-control" placeholder="Keywords (คั่นด้วย comma เช่น wifi,internet,เน็ต)">
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-success w-100"><i class="bi bi-plus-lg"></i> เพิ่ม</button>
      </div>
    </div>
  </form>
</div>

<!-- Categories List -->
<div class="card stat-card p-4">
  <h5 class="mb-3">ประเภททั้งหมด (<%= categories.length %>)</h5>
  <div class="table-responsive">
    <table class="table table-striped table-hover mb-0">
      <thead>
        <tr>
          <th>ID</th>
          <th>ชื่อประเภท</th>
          <th>Keywords</th>
          <th style="width: 200px">จัดการ</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(cat => { %>
        <tr>
          <td><%= cat.id %></td>
          <td>
            <span id="cat-text-<%= cat.id %>"><%= cat.name %></span>
          </td>
          <td>
            <span id="cat-kw-<%= cat.id %>">
              <% cat.keywords.forEach(kw => { %>
                <span class="badge bg-secondary me-1"><%= kw %></span>
              <% }) %>
              <% if (cat.keywords.length === 0) { %>
                <span class="text-muted">-</span>
              <% } %>
            </span>
          </td>
          <td>
            <button class="btn btn-outline-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal<%= cat.id %>">
              <i class="bi bi-pencil"></i>
            </button>
            <form method="POST" action="/categories/delete" class="d-inline" onsubmit="return confirm('ลบประเภท <%= cat.name %> ?')">
              <input type="hidden" name="id" value="<%= cat.id %>">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i>
              </button>
            </form>
          </td>
        </tr>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal<%= cat.id %>" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <form method="POST" action="/categories/edit">
                <input type="hidden" name="id" value="<%= cat.id %>">
                <div class="modal-header">
                  <h5 class="modal-title">แก้ไขประเภท #<%= cat.id %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                  <div class="mb-3">
                    <label class="form-label fw-bold">ชื่อประเภท</label>
                    <input type="text" name="name" class="form-control" value="<%= cat.name %>" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label fw-bold">Keywords (คั่นด้วย comma)</label>
                    <input type="text" name="keywords" class="form-control" value="<%= cat.keywords.join(', ') %>">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                  <button type="submit" class="btn btn-primary">บันทึก</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('footer') %>
